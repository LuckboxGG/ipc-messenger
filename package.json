{
  "name": "@luckbox/ipc-messenger",
  "author": "Luckbox",
  "version": "2.0.1",
  "description": "Client for ipc",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuckboxGG/ipc-messenger.git"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc -d",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://github.com/LuckboxGG/ipc-messenger#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm audit"
    }
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@luckbox/http-adapter-factory": "^1.3.1",
    "@luckbox/logger-factory": "^4.0.0",
    "amqplib": "^0.10.3",
    "lodash.isplainobject": "^4.0.6",
    "lodash.omit": "^4.5.0",
    "p-queue": "^6.2.1",
    "ts-opaque": "^3.0.1"
  },
  "devDependencies": {
    "@luckbox/eslint-rules": "4.0.4",
    "@types/amqplib": "^0.10.1",
    "@types/jest": "^26.0.3",
    "@types/lodash.isplainobject": "^4.0.6",
    "@types/lodash.omit": "^4.5.6",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "ts-jest": "^26.1.1",
    "typescript": "^4.1.4"
  }
}
